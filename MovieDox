    <script type="module">
        // ----------------------------------------------------------------------
        // 1. FIREBASE CONFIGURATION & INITIALIZATION (Backend Setup)
        // ----------------------------------------------------------------------

        // !!! WARNING: This is the user's config. Do not use in a real app. !!!
        const firebaseConfig = {
            apiKey: "AIzaSyDMN3D2ghLboXbXCR3EJ53gJTuEeYR9N8Y",
            authDomain: "earm-db1ec.firebaseapp.com",
            projectId: "earm-db1ec",
            // ... other keys
        };
        
        import { initializeApp } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-app.js";
        import { getAuth, onAuthStateChanged, createUserWithEmailAndPassword, signInWithEmailAndPassword, signOut } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-auth.js";
        import { getFirestore, doc, setDoc, getDoc, updateDoc, collection, addDoc, serverTimestamp, query, where, getDocs, orderBy, limit, onSnapshot } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-firestore.js";

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app);

        const ADS_TO_UNLOCK = 3; // REQUIRED ADS TO UNLOCK ONE MOVIE
        let currentUser = null;
        let userData = null;
        let userUnlockData = {}; // Stores user's per-movie unlock progress
        let movieList = []; // Stores dynamically fetched movies
        let unsubscribeMovies = null; // Listener for real-time movie updates
        
        // ----------------------------------------------------------------------
        // 2. DOM ELEMENT REFERENCES
        // ----------------------------------------------------------------------

        const loader = document.getElementById('loader');
        const profileNameEl = document.getElementById('profile-name');
        const profileEmailEl = document.getElementById('profile-email');
        const movieListingGrid = document.getElementById('movie-listing-grid');
        const searchBar = document.getElementById('searchBar');
        const homeUserNameEl = document.getElementById('home-user-name');

        // ----------------------------------------------------------------------
        // 3. LIFECYCLE & AUTH STATE MANAGEMENT
        // ----------------------------------------------------------------------

        window.onload = () => {
            lucide.createIcons();
            setupEventListeners();
            showMainPage('auth-section');
            loader.style.display = 'none';
            onAuthStateChanged(auth, handleAuthStateChange);
        };

        async function handleAuthStateChange(user) {
            if (user) {
                loader.style.display = 'flex';
                currentUser = user;
                await fetchUserData();
                await fetchUserUnlockData(); // Fetch unlock progress
                await fetchMovies(); // NEW: Fetch movies dynamically on login
                updateUI();
                // renderMovieList(movieList); // Already called by fetchMovies' onSnapshot
                showMainPage('app-container');
                navigateTo('home-page');
                loader.style.display = 'none';
            } else {
                currentUser = null;
                userData = null;
                userUnlockData = {};
                if (unsubscribeMovies) unsubscribeMovies(); // Cleanup listener on logout
                showMainPage('auth-section');
            }
        }
        
        // ----------------------------------------------------------------------
        // 4. FIREBASE DATA FETCHING & UI UPDATES
        // ----------------------------------------------------------------------

        async function fetchUserData() {
            if (!currentUser) return;
            const userRef = doc(db, "users", currentUser.uid);
            try {
                const userSnap = await getDoc(userRef);
                if (userSnap.exists()) {
                    userData = userSnap.data();
                } else {
                    const defaultUserData = {
                        name: currentUser.displayName || currentUser.email.split('@')[0], 
                        email: currentUser.email,
                        createdAt: serverTimestamp(),
                    };
                    await setDoc(userRef, defaultUserData);
                    userData = defaultUserData;
                }
            } catch (error) {
                console.error("Error fetching user data:", error);
                showAlert("Error loading user data.");
            }
        }
        
        // --- NEW: Function to fetch movie list dynamically (REAL-TIME FIX) ---
        async function fetchMovies() {
            if (unsubscribeMovies) unsubscribeMovies(); // Clear old listener
            const moviesRef = collection(db, "movies");
            const q = query(moviesRef, orderBy("createdAt", "desc")); // Order by newest movie
            
            // Use onSnapshot for real-time updates
            unsubscribeMovies = onSnapshot(q, (snapshot) => {
                movieList = [];
                snapshot.forEach(doc => {
                    // Use Firestore document ID as the movie ID
                    movieList.push({ id: doc.id, ...doc.data() }); 
                });
                renderMovieList(movieList); // Re-render every time data changes
            }, (error) => {
                console.error("Error fetching movies:", error);
                showAlert("Error loading movie list.");
            });
        }
        
        // --- Function to fetch movie unlock progress (CORRECTED) ---
        async function fetchUserUnlockData() {
            if (!currentUser) return;
            const unlockRef = doc(db, "movie_unlocks", currentUser.uid);
            try {
                const unlockSnap = await getDoc(unlockRef);
                if (unlockSnap.exists()) {
                    userUnlockData = unlockSnap.data();
                    userUnlockData.unlocked = userUnlockData.unlocked || {};
                    userUnlockData.progress = userUnlockData.progress || {};
                } else {
                    userUnlockData = { unlocked: {}, progress: {} };
                    await setDoc(unlockRef, userUnlockData); 
                }
            } catch(error) {
                 console.error("Error fetching unlock data:", error);
            }
        }
        
        function updateUI() {
            if (!userData) return;
            const userName = userData.name || 'User';
            homeUserNameEl.textContent = userName;
            profileNameEl.textContent = userName;
            profileEmailEl.textContent = userData.email || 'No Email';
        }

        // --- Movie Listing Logic ---
        function renderMovieList(movieList) {
            movieListingGrid.innerHTML = ''; // Clear existing content
            if (movieList.length === 0) {
                movieListingGrid.innerHTML = '<p class="text-gray-400 text-center col-span-full">No movies found.</p>';
                return;
            }

            movieList.forEach(movie => {
                const card = document.createElement('div');
                card.classList.add('movie-card');
                
                const isUnlocked = userUnlockData.unlocked?.[movie.id] === true;
                const currentProgress = userUnlockData.progress?.[movie.id] || 0;
                
                // Clicking on the card for an unlocked movie will now call handleMovieClick
                card.setAttribute('onclick', `handleMovieClick('${movie.id}', '${movie.title || 'Movie'}')`);

                card.innerHTML = `
                    <div class="movie-poster" style="background-image: url('${movie.posterUrl}'); background-size: cover; background-position: center;">
                        <i data-lucide="${isUnlocked ? 'play' : 'lock'}" class="w-8 h-8 ${movie.posterUrl ? 'text-white' : 'text-gray-400'}"></i>
                    </div>
                    <div class="p-2">
                        <h3 class="text-sm font-semibold text-gray-100 truncate">${movie.title || 'N/A'}</h3>
                        <p class="text-xs text-gray-400">${movie.year || 'N/A'} | ${movie.rating || 'N/A'}</p>
                    </div>
                    ${!isUnlocked ? `
                        <div class="lock-overlay">
                            <i data-lucide="lock" class="w-8 h-8 mb-2"></i>
                            <p class="text-sm font-bold mb-1">Locked</p>
                            <p class="text-xs">Ads Watched: ${currentProgress}/${ADS_TO_UNLOCK}</p>
                            <button class="btn-accent px-3 py-1 mt-2 rounded-lg text-xs">Watch Ad to Unlock</button>
                        </div>
                    ` : `
                        <div class="lock-overlay bg-transparent backdrop-filter-none" style="opacity:0; pointer-events:none;"></div>
                    `}
                `;
                movieListingGrid.appendChild(card);
            });
            lucide.createIcons();
        }
        
        // --- Movie Details Page Renderer (UPDATED FUNCTION TO SHOW ALL DOWNLOAD LINKS) ---
        function renderMovieDetails(movie) {
            const detailsContentEl = document.getElementById('details-content');
            
            // Dynamically generate download buttons based on available links
            let downloadButtonsHtml = '';
            
            if (movie.downloadUrl480p) {
                downloadButtonsHtml += `
                    <a href="${movie.downloadUrl480p}" download="${movie.title}_480p.mp4" 
                       class="w-full p-3 rounded-lg bg-green-600 hover:bg-green-700 text-white font-bold text-center flex items-center justify-center mt-3 transition duration-200">
                        <i data-lucide="download" class="w-5 h-5 mr-2"></i> Download (480p)
                    </a>
                `;
            }
            if (movie.downloadUrl720p) {
                downloadButtonsHtml += `
                    <a href="${movie.downloadUrl720p}" download="${movie.title}_720p.mp4" 
                       class="w-full p-3 rounded-lg bg-green-600 hover:bg-green-700 text-white font-bold text-center flex items-center justify-center mt-3 transition duration-200">
                        <i data-lucide="download" class="w-5 h-5 mr-2"></i> Download (720p)
                    </a>
                `;
            }
            if (movie.downloadUrl1080p) {
                downloadButtonsHtml += `
                    <a href="${movie.downloadUrl1080p}" download="${movie.title}_1080p.mp4" 
                       class="w-full p-3 rounded-lg bg-green-600 hover:bg-green-700 text-white font-bold text-center flex items-center justify-center mt-3 transition duration-200">
                        <i data-lucide="download" class="w-5 h-5 mr-2"></i> Download (1080p)
                    </a>
                `;
            }
            
            if (downloadButtonsHtml === '') {
                 downloadButtonsHtml = '<p class="text-red-400 text-center mt-6">No download links available for this movie.</p>';
            }


            detailsContentEl.innerHTML = `
                <img src="${movie.posterUrl || 'https://placehold.co/300x450/1e1e1e/e50914?text=Poster+N/A'}" 
                     alt="${movie.title || 'N/A'} Poster" 
                     class="w-full h-auto rounded-lg shadow-xl mb-4">
                
                <h1 class="text-3xl font-bold text-white">${movie.title || 'N/A'}</h1>
                <p class="text-gray-400 text-lg">${movie.year || 'N/A'} | Rating: ${movie.rating || 'N/A'}</p>
                
                <div class="card-bg p-4 rounded-lg space-y-3">
                    <h3 class="text-xl font-semibold border-b border-gray-700 pb-2 text-accent">Summary</h3>
                    <p class="text-gray-300">
                        ${movie.description || "No description provided."}
                    </p>
                </div>

                <h3 class="text-xl font-semibold border-b border-gray-700 pb-2 text-accent mt-6">Download Options</h3>
                <div class="space-y-3">
                    ${downloadButtonsHtml}
                </div>
            `;
            lucide.createIcons(); // To render the download icon
        }

        // --- Movie Click Handler (UPDATED) ---
        window.handleMovieClick = function(movieId, movieTitle) {
            const isUnlocked = userUnlockData.unlocked?.[movieId] === true;
            
            if (isUnlocked) {
                 // UNLOCKED: Find movie details and navigate to the new page
                 const movie = movieList.find(m => m.id === movieId); 
                 if (movie) {
                     renderMovieDetails(movie);
                     navigateTo('movie-details-page');
                 } else {
                     showAlert("Movie details not found.");
                 }
                 return;
            }
            
            // LOCKED: Continue ad-watching logic
            const currentProgress = userUnlockData.progress?.[movieId] || 0;
            if (currentProgress < ADS_TO_UNLOCK) {
                showAlert(`To unlock **${movieTitle}**, you need to watch ${ADS_TO_UNLOCK - currentProgress} more ads. Starting ad now...`);
                // Start the ad watching process
                claimAdToUnlock(movieId, movieTitle);
            } else {
                // Movie should be ready to unlock
                fetchUserUnlockData().then(() => renderMovieList(movieList)); // Use dynamic list
            }
        }
        
        function simulateDownload(movieTitle) {
            // This function is now obsolete as the click handles navigation to the details page.
            console.log(`Movie ${movieTitle} is unlocked, proceeding to details page.`);
        }

        // ----------------------------------------------------------------------
        // 5. UNLOCK AD LOGIC (Core Logic)
        // ----------------------------------------------------------------------
        
        window.claimAdToUnlock = async function(movieId, movieTitle) {
            if (typeof window.show_9356525 !== 'function') {
                return showAlert("Ad service is currently unavailable. Please try again later.");
            }
            
            loader.style.display = 'flex';
            
            // 1. Show the Ad
            let adPromise;
            try {
                adPromise = window.show_9356525();
                await adPromise;

                // 2. Ad Watched Success: Update Progress
                const unlockRef = doc(db, "movie_unlocks", currentUser.uid);
                
                await fetchUserUnlockData();
                
                const currentProgress = userUnlockData.progress?.[movieId] || 0;
                let newProgress = currentProgress + 1;
                
                let updateData = {};
                
                if (newProgress >= ADS_TO_UNLOCK) {
                    // 3. UNLOCK COMPLETE
                    updateData = {
                        'unlocked': {
                            ...userUnlockData.unlocked, 
                            [movieId]: true
                        },
                        'progress': {
                            ...userUnlockData.progress, 
                            [movieId]: newProgress,
                        }
                    };
                    showAlert(`Congratulations! **${movieTitle}** is now permanently UNLOCKED. You can download it now.`);
                } else {
                    // 4. PROGRESS UPDATE
                    updateData = {
                         'progress': {
                            ...userUnlockData.progress, 
                            [movieId]: newProgress,
                        }
                    };
                    showAlert(`Ad viewed successfully! ${movieTitle}: ${newProgress}/${ADS_TO_UNLOCK} progress made. Watch ${ADS_TO_UNLOCK - newProgress} more ads.`);
                }
                
                // Use updateDoc with merge: true implicitly handled by spreading nested objects
                await updateDoc(unlockRef, updateData); 
                
                // 5. Update Local Data & UI (onSnapshot in fetchMovies will re-render)
                await fetchUserUnlockData();
                renderMovieList(movieList); // Use dynamic list
                
            } catch(e) {
                console.error("Ad error:", e);
                showAlert('Could not show ad or ad was closed early. Please try again.');
            } finally {
                loader.style.display = 'none';
            }
        }

        // ----------------------------------------------------------------------
        // 6. EVENT LISTENERS & NAVIGATION (Unchanged)
        // ----------------------------------------------------------------------

        function showMainPage(pageId) {
            document.querySelectorAll('.main-page').forEach(p => p.classList.remove('active'));
            document.getElementById(pageId).classList.add('active');
        }

        function navigateTo(pageId) {
            document.querySelectorAll('.sub-page').forEach(p => p.classList.remove('active'));
            document.getElementById(pageId).classList.add('active');
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active', 'text-accent');
                if (link.dataset.page === pageId) link.classList.add('active', 'text-accent');
            });
            if (pageId === 'profile-page') loadDownloadHistory();
        }
        window.navigateTo = navigateTo;

        function setupEventListeners() {
            document.getElementById('show-signup').addEventListener('click', (e) => { e.preventDefault(); document.getElementById('login-view').classList.add('hidden'); document.getElementById('signup-view').classList.remove('hidden'); });
            document.getElementById('show-login').addEventListener('click', (e) => { e.preventDefault(); document.getElementById('signup-view').classList.add('hidden'); document.getElementById('login-view').classList.remove('hidden'); });
            document.getElementById('signup-btn').addEventListener('click', handleSignup);
            document.getElementById('login-btn').addEventListener('click', handleLogin);
            document.getElementById('logout-btn').addEventListener('click', handleLogout);
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    navigateTo(link.dataset.page);
                });
            });
            document.getElementById('notification-bell').addEventListener('click', () => { navigateTo('notifications-page'); loadNotifications(); });
            
            searchBar.addEventListener('keyup', (e) => {
                const searchTerm = e.target.value.toLowerCase();
                const filteredMovies = movieList.filter(movie => { // Use dynamic list
                    return movie.title?.toLowerCase().includes(searchTerm);
                });
                renderMovieList(filteredMovies);
            });
        }
        
        async function loadDownloadHistory() {
             const historyList = document.getElementById('withdrawal-history-list');
             const unlockedMovies = Object.keys(userUnlockData.unlocked || {}).filter(key => userUnlockData.unlocked[key] === true);
             if (unlockedMovies.length === 0) {
                 historyList.innerHTML = '<p class="text-gray-400 text-center">No movies unlocked yet.</p>';
                 return;
             }
             historyList.innerHTML = '';
             unlockedMovies.forEach(movieId => {
                 // Search in the dynamic list
                 const movie = movieList.find(m => m.id === movieId); 
                 if (movie) {
                      historyList.innerHTML += `<div class="card-bg p-3 rounded-lg flex items-center justify-between">
                         <div><p class="font-semibold">${movie.title}</p><p class="text-xs text-gray-400">${movie.year}</p></div>
                         <p class="font-bold text-green-400">UNLOCKED</p>
                      </div>`;
                 }
             });
        }

        // --- Auth Functions (Kept simple) ---
        async function handleSignup() {
             const name = document.getElementById('signup-name').value;
            const email = document.getElementById('signup-email').value;
            const password = document.getElementById('signup-password').value;
            if (!name || !email || !password) return showAlert("Please fill all fields.");
            loader.style.display = 'flex';
            try {
                const userCredential = await createUserWithEmailAndPassword(auth, email, password);
                const userRef = doc(db, "users", userCredential.user.uid);
                await setDoc(userRef, { name: name, email: email, createdAt: serverTimestamp() });
            } catch (error) {
                showAlert(error.message);
            } finally {
                loader.style.display = 'none';
            }
        }

        async function handleLogin() {
            const email = document.getElementById('login-email').value;
            const password = document.getElementById('login-password').value;
            if (!email || !password) return showAlert("Please enter email and password.");
            loader.style.display = 'flex';
            try {
                await signInWithEmailAndPassword(auth, email, password);
            } catch (error) {
                showAlert(error.message);
            } finally {
                loader.style.display = 'none';
            }
        }

        async function handleLogout() { await signOut(auth); }

        function showAlert(message) {
            document.getElementById('alert-message').innerHTML = message;
            document.getElementById('custom-alert').classList.remove('hidden');
            document.getElementById('alert-ok-btn').onclick = () => {
                document.getElementById('custom-alert').classList.add('hidden');
            };
        }
        window.showAlert = showAlert;

        // --- Notifications (Kept Simple) ---
        async function loadNotifications() {
             const listEl = document.getElementById('notifications-list');
             listEl.innerHTML = '<p class="text-gray-400 text-center">No new alerts right now.</p>';
        }

    </script>
</body>
</html>
